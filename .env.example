# Digital Footprint Analyzer - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# REQUIRED - Gmail OAuth
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret

# REQUIRED - Google Gemini
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# DATABASE - Local (SQLite)
DATABASE_PATH=./data/tokens.db

# DATABASE - Production (PostgreSQL/Supabase)
# DATABASE_URL=postgresql://postgres.xxx:PASSWORD@aws-0-region.pooler.supabase.com:5432/postgres

# WEB DEPLOYMENT
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
OAUTH_REDIRECT_URI=http://localhost:8080

# OPTIONAL
ENABLE_LLM_ANALYSIS=false
LLM_MAX_EMAILS_TO_ANALYZE=10

# SECURITY (Recommended)
# SECRET_KEY=generate_with_secrets_token_urlsafe_32
